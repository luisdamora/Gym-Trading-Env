# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project.
# For more information: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
# Derivado de tool.ruff.line-length = 100 en pyproject.toml
max_line_length = 100
indent_style = space
indent_size = 4

# Archivos Python
[*.py]
indent_style = space
indent_size = 4
# Ruff formatea con comillas dobles; EditorConfig no aplica estilo de comillas, pero mantenemos coherencia general
# target-version: py37 (informativo, gestionado por tooling Python)

# JavaScript/TypeScript (base)
[{*.js,*.cjs,*.mjs,*.ts,*.tsx}]
indent_style = space
indent_size = 2
quote_type = double

# HTML, CSS y afines (base)
[{*.html,*.htm,*.css,*.scss}]
indent_style = space
indent_size = 2

# JSON y YAML
[{*.json,*.jsonc,*.yml,*.yaml}]
indent_style = space
indent_size = 2

# Markdown: no recortar espacios finales (ej. tablas)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Makefiles requieren tabs
[Makefile]
indent_style = tab
